    DCOCTL = CALDCO_1MHZ;       //MCLK e SMCLK @ 1MHz
    P1OUT &= ~(LED1+LED2);
    P1DIR |= LED1 + LED2;
    TA0CCR0 = 62500-1; //10000-1;
    TA0CTL = TASSEL_2 + ID_3 + MC_3 + TAIE;
    _BIS_SR(LPM0_bits+GIE);
    return 0;
}

